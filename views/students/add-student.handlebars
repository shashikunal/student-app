<section id="add-Student">
    <article class="container">
        <div class="row">
            <div class="col-md-3 left">
                <h3 class="h3 font-weight-bold text-justify">Add Student</h3>
            </div>
            <div class="col-md-9 right">

                <form action="/student/add-student" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-4 photo_block">
                            <label for="student_photo">Student Photo</label>
                            <input type="file" name="student_photo" class="form-control my-2 hide_file">
                        </div>

                        <div class="col-md-4">
                            <label for="id">Student id</label>
                            <input type="text" name="student_id" class="form-control my-2" required>
                        </div>

                        <div class="col-md-4">
                            <label for="student_name">Student name</label>
                            <input type="text" name="student_name" class="form-control my-2" required>
                        </div>
                        <div class="col-md-4">
                            <label for="student_location">Student location</label>
                            <input type="text" name="student_location" class="form-control my-2" required>
                        </div>

                        <div class="col-md-4">
                            <label for="student_dob">Student Date of birth</label>
                            <input type="date" name="student_dob" class="form-control my-2" required>
                        </div>
                        <div class="col-md-4">
                            <label for="student_education">Student Education</label>
                            <input type="text" name="student_education" class="form-control my-2" required>
                        </div>

                        <div class="col-md-4  form-check">
                            <label for="student_skills">Students Skills</label>
                            <br />
                            <span><input type="checkbox" class="form-check-input1" name="student_skills"
                                    value="java"><label>Java</label></span>
                            <span><input type="checkbox" class="form-check-input1" name="student_skills"
                                    value="nodejs"><label>Nodejs</label></span>
                            <span><input type="checkbox" class="form-check-input1" name="student_skills"
                                    value="python"><label>Python</label></span>
                            <span><input type="checkbox" class="form-check-input1" name="student_skills"
                                    value="expressjs"><label>Expressjs</label></span>
                            <span><input type="checkbox" class="form-check-input1" name="student_skills"
                                    value="javascript"><label>Javascript</label></span>
                        </div>

                        <div class="col-md-4">
                            <label for="student_email">Student EMail</label>
                            <input type="text" name="student_email" class="form-control my-2" required>
                        </div>

                        <div class="col-md-4">
                            <label for="student_gender">Student Gender</label>
                            <br>
                            <input type="radio" name="student_gender" class="form-control1 my-2" value="male"> Male
                            <input type="radio" name="student_gender" class="form-control1 my-2" value="female"> Female
                        </div>

                        <div class="col-md-4">
                            <label for="student_phone">Student Phone number</label>
                            <input type="text" name="student_phone" class="form-control my-2" required>
                        </div>

                        <div class="col-md-4">
                            <label for="student_percentage">Student Percentage</label>
                            <input type="text" name="student_percentage" class="form-control my-2" required>
                        </div>

                        <div class="col-md-12">
                            <button class="btn btn-success float-right">Add Student</button>
                        </div>

                    </div>
                </form>
            </div>

        </div>
    </article>

</section>